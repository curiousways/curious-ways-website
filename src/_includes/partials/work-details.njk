<article class="[ panel ]">

  <div class="[ work-details ]  [ wrapper ]">

    <div class="[ work-description ]">

      <blockqoute class="work-description__quote">
        <p class="[ lg:measure-short ]">{{ summary }}</p>
      </blockqoute>

      <div class="work-description__services">

        <ul class="work-description__list">
          {% for item in servicesList %}
            <li>
              <span>{{ item.service }}</span>
            </li>
          {% endfor %}
        </ul>

      </div>

    </div>

    <div class="work-description__company">
      <div>
        Ron Davidson, CEO
      </div>
      <div class="work-description__website">
        <a href="">website.com</a>
      </div>
    </div>
    
  </div>

</article>