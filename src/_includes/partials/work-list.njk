<div class="wrapper animate__animated animate__fadeIn">
  {% if workListHeadline %}
    <h2 class="[ headline gap-bottom-600 ]">
      {{ workListHeadline }}
    </h2>
  {% endif %}  
  <article class="[ grid-listing ]">
    {% for item in workItems %}
    <figure class="[ grid-listing__item ] [ flow ]">
      <div class="[ grid-listing__media ]">
        <a
          href="{{ item.url }}"
          aria-label="See {{ item.data.title }}"
        >
          {% include "partials/preview-img.njk" %}
        </a>
      </div>
      <figcaption class="[ grid-listing__content ] [ flow ]">
        <h2 class="[ grid-listing__heading text-500 ]">
          {{ item.data.workTitle }}
        </h2>
        <p class="[ grid-listing__summary ] [ measure-short ]">
          {{ item.data.workSummary|safe }}
        </p>
      </figcaption>
      <div class="grid-listing__link">
        {% set linkURL= item.url %}
        {% set linkText = "View Project" %}
        {% set linkClass = "font-header-med text-500" %}
        {% include "partials/link.njk" %}
      </div>
    </figure>
    {% endfor %}
  </article>
</div>