{% extends "layouts/base.njk" %} 
{% set pageCriticalStyles = ['css/home.css'] %}
{% set pageBG = 'bg bg--home' %}

{% block content %}

<video class="fade" playsinline autoplay muted poster="polina.jpg" id="home-video" 
	style="
	object-fit: cover;
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
	z-index: 10;
	transition: opacity 1.5s;
	">
  {# <source src="polina.webm" type="video/webm"> #}
  <source src="video/curiousways.mp4" type="video/mp4">
</video>

<script type='text/javascript'>
	var loadingVideo = document.getElementById("home-video");

  loadingVideo.addEventListener('ended', function(e) {
  	console.log('video ends');
		loadingVideo.style.opacity = '0';
		//loadingVideo.remove();
  })
</script>

<div class="wrapper">
	<article class="home">
		<div class="[ home__content ] [ flow has-text-links ] [ line-break--xl ]">
			<h1 class="home__title font-header-reg">{{ home.title | safe  }}</h1>
			<h2 class="home__subtitle font-header-reg">{{ home.subtitle  | safe }}</h2>
			<p class="home__cta font-header-reg">{{ home.cta  | safe }}</p>
		</div>
	</article>
</div>
{% endblock %}	