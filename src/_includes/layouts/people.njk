{% extends "layouts/base.njk" %} 
{% set pageCriticalStyles = ['css/people.css'] %}
{% set bodyClass = 'page-people' %}
{% set pageHeaderTitle = title %} 
{% set pageHeaderSummary = content %} 
{% set peopleItems = collections.people %} 

{% block content %}

  <article>
    {% include "partials/page-header.njk" %} 
  </article>

  {% if peopleItems %} 
    <div class="[ no-js-hidden ] [ panel ]">
      <div class="[ wrapper ] [ flow flow-space-700 ]">
        {% include "partials/people.njk" %}
      </div>
    </div>
  {% endif %}

  <div class="[ wrapper ]">
    {% include "partials/living-wage.njk" %} 
  </div>

  {% include "partials/cta.njk" %}

{% endblock %}